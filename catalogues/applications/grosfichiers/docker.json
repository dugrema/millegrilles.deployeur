{
  "nom": "grosfichiers",
  "version": "1.46.0",
  "registries": [
    "docker.maceroc.com"
  ],
  "images": {
    "millegrilles_grosfichiers": {
      "image": "millegrilles_consignation_python_main",
      "version": "1.46.0"
    },
    "millegrilles_web_grosfichiers": {
      "image": "millegrilles_web_grosfichiers",
      "version": "1.46.0"
    }
  },
  "dependances": [
    {
      "image": "millegrilles_grosfichiers",
      "config": {
        "name": "grosfichiers",
        "certificat_compte": "pki.grosfichiers.cert",
        "env": [
          "MG_MQ_HOST=mq",
          "MG_MQ_PORT=5673",
          "CERTFILE=/run/secrets/cert.pem",
          "KEYFILE=/run/secrets/key.pem",
          "CAFILE=/run/secrets/millegrille.cert.pem",
          "MG_MONGO_HOST=mongo",
          "RUST_LOG=warn,millegrilles_grosfichiers=info",
          "MG_FICHIERS_URL=https://fichiers:443",
          "MG_REDIS_URL=redis://redis:6379"
        ],
        "constraints": [
          "node.labels.millegrilles.grosfichiers == true"
        ],
        "configs": [
          {
            "name": "pki.grosfichiers.cert",
            "filename": "/run/secrets/cert.pem"
          },
          {
            "name": "pki.millegrille.cert",
            "filename": "/run/secrets/millegrille.cert.pem"
          }
        ],
        "secrets": [
          {
            "match_config": true,
            "name": "pki.grosfichiers.key",
            "filename": "key.pem"
          }
        ],
        "networks": [
          {
            "target": "millegrille_net"
          }
        ],
        "labels": {
          "application": "grosfichiers",
          "millegrille": "${IDMG}"
        },
        "resources": {
          "cpu_limit": 500000000,
          "mem_limit": 30000000
        },
        "restart_policy": {
          "condition": "any",
          "delay": 30000000000
        },
        "mode": {
          "mode": "replicated",
          "replicas": 1
        }
      }
    },
    {
      "image": "millegrilles_web_grosfichiers",
      "certificat_compte": "pki.grosfichiers.cert",
      "config": {
        "name": "grosfichiers_web",
        "env": [
          "MG_MQ_CERTFILE=/run/secrets/cert.pem",
          "MG_MQ_KEYFILE=/run/secrets/key.pem",
          "MG_MQ_CAFILE=/run/secrets/millegrille.cert.pem",
          "WEB_CERT=/run/secrets/cert.pem",
          "WEB_KEY=/run/secrets/key.pem",
          "SERVER_TYPE=spdy",
          "HOST=${HOSTNAME_DOMAINE}",
          "PORT=443",
          "MG_REDIS_HOST=redis",
          "MG_REDIS_PORT=6379"
        ],
        "mounts": [
          "${NGINX_DATA_VOLUME}:/var/opt/millegrilles/nginx/data:rw"
        ],
        "configs": [
          {
            "name": "pki.grosfichiers.cert",
            "filename": "/run/secrets/cert.pem"
          },
          {
            "name": "pki.millegrille.cert",
            "filename": "/run/secrets/millegrille.cert.pem"
          }
        ],
        "secrets": [
          {
            "match_config": true,
            "name": "pki.grosfichiers.key",
            "filename": "key.pem"
          }
        ],
        "networks": [
          {
            "target": "millegrille_net",
            "aliases": [
              "grosfichiers"
            ]
          }
        ],
        "labels": {
          "application": "grosfichiers",
          "millegrille": "${IDMG}",
          "url": "https://${HOSTNAME}/grosfichiers",
          "securite": "3.protege"
        },
        "resources": {
          "cpu_limit": 500000000,
          "mem_limit": 73741824
        },
        "restart_policy": {
          "condition": "on-failure",
          "delay": 60000000000,
          "max_attempts": 5
        },
        "mode": {
          "mode": "replicated",
          "replicas": 1
        }
      }
    }
  ],
  "nginx": {
    "path_location": "/grosfichiers",
    "proxypass": "https://grosfichiers:443"
  }
}