{
  "nom": "ipfs",
  "version": "1.42.4",
  "registries": [
    "ipfs"
  ],
  "images": {
    "go-ipfs": {
      "image": "go-ipfs",
      "version": "latest"
    }
  },
  "dependances": [
    {
      "image": "go-ipfs",
      "config": {
        "name": "ipfs",
        "mounts": [
          "/var/opt/millegrilles/consignation/ipfs/staging:/export:rw",
          "/var/opt/millegrilles/consignation/ipfs/data:/data/ipfs:rw",
          "/var/opt/millegrilles/consignation/grosfichiers:/var/opt/millegrilles/consignation/grosfichiers:ro"
        ],
        "networks": [
          {
            "target": "host"
          }
        ],
        "labels": {
          "millegrille": "${IDMG}"
        },
        "resources": {
          "cpu_limit": 250000000,
          "mem_limit": 500000000
        },
        "restart_policy": {
          "condition": "on-failure",
          "delay": 60000000000,
          "max_attempts": 10
        },
        "mode": {
          "mode": "replicated",
          "replicas": 1
        }
      }
    }
  ]
}