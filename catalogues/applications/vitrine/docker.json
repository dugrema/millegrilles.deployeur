{
  "nom": "vitrine",
  "version": "1.35.1",
  "registries": [
    "docker.maceroc.com",
    "docker.mg-maple.maple.maceroc.com"
  ],
  "images": {
    "vitrine": {
      "image": "millegrilles_vitrine",
      "version": "1.35.0"
    }
  },
  "dependances": [
    {
      "image": "vitrine",
      "config": {
        "name": "vitrine",
        "role": "vitrine",
        "certificat_compte": "pki.vitrine.cert",
        "env": [
          "MG_MQ_CERTFILE=/run/secrets/cert.pem",
          "MG_MQ_KEYFILE=/run/secrets/key.pem",
          "MG_MQ_CAFILE=/run/secrets/millegrille.cert.pem",
          "WEB_CERT=/run/secrets/cert.pem",
          "WEB_KEY=/run/secrets/key.pem",
          "SERVER_TYPE=spdy",
          "HOST=${HOSTNAME_DOMAINE}",
          "PORT=443"
        ],
        "mounts": [
          "${NGINX_DATA_VOLUME}:/var/opt/millegrilles/nginx/data:rw"
        ],
        "configs": [
          {
            "name": "pki.vitrine.cert;pki.monitor.cert",
            "filename": "/run/secrets/cert.pem"
          },
          {
            "name": "pki.millegrille.cert",
            "filename": "/run/secrets/millegrille.cert.pem"
          }
        ],
        "secrets": [
          {
            "match_config": true,
            "name": "pki.vitrine.key;pki.monitor.key",
            "filename": "key.pem"
          }
        ],
        "networks": [
          {
            "target": "millegrille_net",
            "aliases": [
              "vitrine"
            ]
          }
        ],
        "labels": {
          "millegrille": "${IDMG}",
          "url": "https://${HOSTNAME}",
          "securite": "1.public"
        },
        "resources": {
          "cpu_limit": 500000000,
          "mem_limit": 73741824
        },
        "restart_policy": {
          "condition": "on-failure",
          "delay": 60000000000,
          "max_attempts": 5
        },
        "mode": {
          "mode": "replicated",
          "replicas": 1
        }
      }
    }
  ]
}