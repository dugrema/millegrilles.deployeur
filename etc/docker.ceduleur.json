{
  "name": "ceduleur",
  "args": [
    "demarrer_ceduleur.py"
  ],
  "env": [
    "MG_IDMG=${IDMG}",
    "MG_MQ_HOST=mq",
    "MG_MQ_PORT=5673",
    "MG_MQ_SSL=on",
    "MG_MQ_AUTH_CERT=on",
    "MG_MQ_CERTFILE=/run/secrets/cert.pem",
    "MG_MQ_KEYFILE=/run/secrets/key.pem",
    "MG_MQ_CA_CERTS=/run/secrets/millegrille.cert.pem"
  ],
  "mounts": [
    "mg-middleware-rabbitmq-data-${IDMG}:/var/lib/rabbitmq:rw",
    "mq-accounts:/opt/rabbitmq/conf:rw"
  ],
  "constraints": [
    "node.labels.millegrilles.python == true"
  ],
  "configs": [
    {
      "name": "pki.ceduleur.cert",
      "filename": "/run/secrets/cert.pem"
    },
    {
      "name": "pki.millegrille.cert",
      "filename": "/run/secrets/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "name": "pki.ceduleur.key",
      "filename": "key.pem"
    }
  ],
  "networks": [{
    "target": "mg_${IDMG}_net"
  }],
  "labels": {
    "millegrille": "${IDMG}"
  },
  "resources": {
    "cpu_limit": 200000000,
    "mem_limit": 41943040
  },
  "restart_policy": {
    "condition": "any",
    "delay": 60000000000
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}