{
  "Name": "certbot",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "${certbot}",
      "Args": [
        "./run.sh"
      ],
      "Hostname": "${DOMAIN_PUBLIC}",
      "Env": [
        "MG_NOM_MILLEGRILLE=${NOM_MILLEGRILLE}",
        "DEPLOYTEUR_CONFIG_FILE=local.conf",
        "MG_MQ_HOST=mq",
        "MG_MQ_PORT=5673",
        "MG_MQ_SSL=on",
        "MG_MQ_AUTH_CERT=on",
        "MG_MQ_CERTFILE=/run/secrets/pki.millegrilles.ssl.cert",
        "MG_MQ_KEYFILE=/run/secrets/pki.millegrilles.ssl.key",
        "MG_MQ_CA_CERTS=/run/secrets/pki.millegrilles.ssl.CAchain",
        "EMAIL_ADDRESS=mail@mdugre.info"
      ],
      "Mounts": [
        {
          "Type": "bind",
          "Source": "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx",
          "Target": "/var/lib/letsencrypt"
        },{
          "Type": "volume",
          "Source": "letsencrypt",
          "Target": "/etc/letsencrypt"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.nginx.key",
          "File": {
            "Name": "pki.millegrilles.ssl.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ],
      "Configs": [
        {
          "ConfigName": "pki.nginx.fullchain",
          "File": {
            "Name": "/run/secrets/pki.millegrilles.ssl.cert",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "ConfigName": "pki.ca.millegrille.fullchain",
          "File": {
            "Name": "/run/secrets/pki.millegrilles.ssl.CAchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.millegrilles.nginx == true",
        "node.labels.netzone.public == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 500000000,
        "MemoryBytes": 52428800
      }
    },
    "RestartPolicy": {
      "Condition": "any",
      "Delay": 30000000000,
      "MaxAttempts": 1
    },
    "Mode": {
      "Replicated": {
        "Replicas": 1
      }
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net",
          "Aliases": ["www", "${DOMAIN_PUBLIC}"]
        }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
