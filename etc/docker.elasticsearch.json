{
  "name": "elasticsearch",
  "env": [
    "discovery.type=single-node",
    "ES_JAVA_OPTS=-Xms256m -Xmx384m"
  ],
  "mounts": [
    "mg-elasticsearch:/usr/share/elasticsearch/data:rw"
  ],
  "constraints": [
    "node.labels.millegrilles.elasticsearch == true"
  ],
  "networks": [{
    "target": "millegrille_net",
    "aliases": ["elasticsearch"]
  }],
  "labels": {
    "millegrille": "${IDMG}"
  },
  "resources": {
    "cpu_limit": 500000000,
    "mem_limit": 403701760
  },
  "restart_policy": {
    "condition": "any",
    "delay": 30000000000
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}
