{
  "name": "fichiers",
  "env": [
    "MG_IDMG=${IDMG}",
    "MG_MQ_URL=amqps://mq:5673/${IDMG}",
    "MG_MQ_CERTFILE=/run/secrets/cert.pem",
    "MG_MQ_KEYFILE=/run/secrets/key.pem",
    "MG_MQ_CAFILE=/run/secrets/millegrille.cert.pem",
    "CERT=/run/secrets/cert.pem",
    "PRIVKEY=/run/secrets/key.pem",
    "MG_CONSIGNATION_PATH=/opt/millegrilles/consignation",
    "TRANSMISSION_HOST=transmission",
    "TRANSMISSION_PASSWORD=bwahahah1202"
  ],
  "mounts": [
    "${MOUNTS}/consignation:/opt/millegrilles/consignation:rw"
  ],
  "constraints": [
    "node.labels.millegrilles.fichiers == true"
  ],
  "configs": [
    {
      "name": "pki.fichiers.cert",
      "filename": "/run/secrets/cert.pem"
    },
    {
      "name": "pki.millegrille.cert",
      "filename": "/run/secrets/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "name": "pki.fichiers.key",
      "filename": "key.pem"
    }
  ],
  "networks": [{
    "target": "mg_${IDMG}_net",
    "aliases": ["consignationfichiers"]
  }],
  "labels": {
    "millegrille": "${IDMG}"
  },
  "resources": {
    "cpu_limit": 2000000000,
    "mem_limit": 209715200
  },
  "restart_policy": {
    "condition": "on-failure",
    "delay": 30000000000,
    "max_attempts": 3
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}