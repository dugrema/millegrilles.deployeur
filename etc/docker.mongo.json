{
  "name": "mongo",
  "hostname": "mongo",
  "args": [
    "/bin/sh", "-c",
    "cat /run/secrets/mongo.key.pem /run/secrets/mongo.cert.pem > /tmp/mongo.key_cert.pem && chmod 400 /tmp/mongo.key_cert.pem && mongod --replSet rs0 --sslMode requireSSL --sslPEMKeyFile /tmp/mongo.key_cert.pem --sslCAFile /run/secrets/millegrille.cert.pem"
  ],
  "env": [
    "MONGO_INITDB_ROOT_USERNAME=${MONGO_INITDB_ROOT_USERNAME}",
    "MONGO_INITDB_ROOT_PASSWORD_FILE=/run/secrets/mongo.root.password"
  ],
  "mounts": [
    "${MOUNTS}/mongo/data:/data/db:rw"
  ],
  "constraints": [
    "node.labels.millegrilles.database == true"
  ],
  "configs": [
    {
      "name": "pki.mongo.cert",
      "filename": "/run/secrets/mongo.cert.pem"
    },
    {
      "name": "pki.millegrille.cert",
      "filename": "/run/secrets/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "match_config": true,
      "name": "pki.mongo.key",
      "filename": "mongo.key.pem"
    },
    {
      "name": "passwd.mongo",
      "filename": "mongo.root.password"
    }
  ],
  "container_labels": {
    "ipv6.mapper.network": "mg_ipv6"
  },
  "networks": [{
    "target": "mg_${IDMG}_net",
    "aliases": ["mongo"]
  }],
  "labels": {
    "millegrille": "${IDMG}"
  },
  "resources": {
    "cpu_limit": 1000000000,
    "mem_limit": 1073741824
  },
  "restart_policy": {
    "condition": "any",
    "delay": 30000000000
  },
  "mode": {
    "mode": "global"
  }
}