{
  "Name": "mongo",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "mg_mongo:4.0_4",
      "Hostname": "mongo.local",
      "Env": [
        "MONGO_INITDB_ROOT_USERNAME=${MONGO_INITDB_ROOT_USERNAME}",
        "MONGO_INITDB_ROOT_PASSWORD_FILE=/run/secrets/mongo.root.password"
      ],
      "Mounts": [
        {
          "Type": "bind",
          "Source": "${MOUNTS}/mongo/data",
          "Target": "/data/db"
        },
        {
          "Type": "bind",
          "Source": "${MOUNTS}/mongo/scripts",
          "Target": "/opt/mongodb/scripts"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.middleware.ssl.key_cert",
          "File": {
            "Name": "pki.millegrilles.ssl.key_cert",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "pki.middleware.ssl.CAchain",
          "File": {
            "Name": "pki.millegrilles.ssl.CAchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "passwd.mongo.root",
          "File": {
            "Name": "mongo.root.password",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "pki.middleware.ssl.key",
          "File": {
            "Name": "pki.millegrilles.wadmin.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "passwd.mongo.scriptinit",
          "File": {
            "Name": "mongo.accounts.js",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.netzone.private == true",
        "node.labels.millegrilles.database == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 2000000000,
        "MemoryBytes": 1073741824
      }
    },
    "RestartPolicy": {
      "Condition": "any",
      "Delay": 30000000000,
      "MaxAttempts": 10
    },
    "Mode": {
      "Global": {}
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net"
        }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
