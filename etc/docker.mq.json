{
  "Name": "mq",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "mg_rabbitmq:3.7-management_10",
      "Hostname": "mq.local",
      "Mounts": [
        {
          "Type": "volume",
          "Source": "mg-middleware-rabbitmq-data-${NOM_MILLEGRILLE}",
          "Target": "/var/lib/rabbitmq"
        },
        {
          "Type": "bind",
          "Source": "${MOUNTS}/mq/accounts",
          "Target": "/opt/rabbitmq/conf"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.middleware.ssl.cert",
          "File": {
            "Name": "pki.millegrilles.ssl.cert",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "pki.middleware.ssl.key",
          "File": {
            "Name": "pki.millegrilles.ssl.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "pki.middleware.ssl.CAchain",
          "File": {
            "Name": "pki.millegrilles.ssl.CAchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "pki.middleware.ssl.cert",
          "File": {
            "Name": "pki.millegrilles.wadmin.cert",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "SecretName": "pki.middleware.ssl.key",
          "File": {
            "Name": "pki.millegrilles.wadmin.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.netzone.private == true",
        "node.labels.millegrilles.mq == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 1500000000,
        "MemoryBytes": 629145600
      }
    },
    "RestartPolicy": {
      "Condition": "any",
      "Delay": 30000000000,
      "MaxAttempts": 10
    },
    "Mode": {
      "Replicated": {
        "Replicas": 1
      }
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net"
        }
    ]
  },
  "EndpointSpec": {
    "Mode": "vip",
    "Ports": [
      {
        "Protocol": "tcp",
        "PublishedPort": 8443,
        "TargetPort": 443,
        "PublishMode": "host"
      },
      {
        "Protocol": "tcp",
        "PublishedPort": 5671,
        "TargetPort": 5671,
        "PublishMode": "host"
      },
      {
        "Protocol": "tcp",
        "PublishedPort": 5673,
        "TargetPort": 5673,
        "PublishMode": "host"
      }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
