{
  "name": "nginx",
  "mounts": [
    "${NGINX_DATA_VOLUME}:${MOUNTS}nginx/data:ro",
    "${NGINX_CONFIG_VOLUME}:/etc/nginx/conf.d/modules:ro",
    "${NGINX_HTML_VOLUME}:/usr/share/nginx/html:ro"
  ],
  "constraints": [
    "node.labels.millegrilles.nginx == true"
  ],
  "configs": [
    {
      "name": "pki.web.cert;pki.nginx.cert",
      "filename": "/run/secrets/webcert.pem"
    },
    {
      "name": "pki.nginx.cert;pki.millegrille.cert",
      "filename": "/usr/share/nginx/files/certs/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "name": "pki.web.key;pki.nginx.key",
      "filename": "webkey.pem"
    }
  ],
  "endpoint_spec": {
    "mode": "vip",
    "ports": [
      {
        "published_port": 443,
        "target_port": 443,
        "protocol": "tcp",
        "publish_mode": "host"
      },
      {
        "published_port": 80,
        "target_port": 80,
        "protocol": "tcp",
        "publish_mode": "host"
      }
    ]
  },
  "container_labels": {
    "ipv6.mapper.network": "mg_ipv6"
  },
  "networks": [{
    "target": "millegrille_net"
  }],
  "resources": {
    "cpu_limit": 500000000,
    "mem_limit": 10485760
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}
