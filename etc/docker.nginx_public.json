{
  "name": "nginx_public",
  "env": [
    "ONIONSERVICE_NAME=nginx",
    "ONIONSERVICE_PORT=443"
  ],
  "mounts": [
    "${NGINX_DATA_VOLUME}:/var/opt/millegrilles/nginx/data:ro",
    "${NGINX_CONFIG_VOLUME}:/etc/nginx/conf.d/modules:ro",
    "${NGINX_HTML_VOLUME}:/usr/share/nginx/html:ro",
    "/var/opt/millegrilles/nginx/ext:/var/opt/millegrilles/nginx/ext:ro"
  ],
  "constraints": [
    "node.labels.millegrilles.nginx == true"
  ],
  "configs": [
    {
      "name": "pki.web.cert;pki.monitor.cert",
      "filename": "/run/secrets/webcert.pem"
    },
    {
      "name": "pki.monitor.cert",
      "filename": "/run/secrets/nginx.cert.pem"
    },
    {
      "name": "pki.millegrille.cert;pki.monitor.cert",
      "filename": "/usr/share/nginx/files/certs/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "match_config": true,
      "name": "pki.web.key;pki.monitor.key",
      "filename": "webkey.pem"
    },
    {
      "match_config": true,
      "name": "pki.monitor.key",
      "filename": "nginx.key.pem"
    }
  ],
  "endpoint_spec": {
    "mode": "vip",
    "ports": [
      {
        "published_port": 443,
        "target_port": 443,
        "protocol": "tcp"
      },
      {
        "published_port": 80,
        "target_port": 80,
        "protocol": "tcp"
      }
    ]
  },
  "container_labels": {
    "ipv6.mapper.network": "mg_ipv6"
  },
  "networks": [{
    "target": "millegrille_net",
    "aliases": ["nginx"]
  }],
  "resources": {
    "cpu_limit": 1000000000,
    "mem_limit": 15000000
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}
