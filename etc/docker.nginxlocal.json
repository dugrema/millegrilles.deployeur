{
  "Name": "nginxlocal",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "${nginx}",
      "Hostname": "www-${NOM_MILLEGRILLE}.local",
      "Env": [
        "NOM_MILLEGRILLE=${NOM_MILLEGRILLE}",
        "NGINX_CONFIG_FILE=local.conf",
        "WEB_CERT=pki.millegrilles.ssl.fullchain",
        "WEB_KEY=pki.millegrilles.ssl.key",
        "URL_DOMAIN=${NOM_MILLEGRILLE}.local"
      ],
      "Mounts": [
        {
          "Type": "bind",
          "Source": "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx/local",
          "Target": "/usr/share/nginx/html"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.nginx.fullchain",
          "File": {
            "Name": "pki.millegrilles.ssl.fullchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "SecretName": "pki.nginx.key",
          "File": {
            "Name": "pki.millegrilles.ssl.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.millegrilles.nginx == true",
        "node.labels.netzone.public != true",
        "node.labels.netzone.private == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 500000000,
        "MemoryBytes": 52428800
      }
    },
    "RestartPolicy": {
      "Condition": "any",
      "Delay": 30000000000,
      "MaxAttempts": 10
    },
    "Mode": {
      "Replicated": {
        "Replicas": 1
      }
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net",
          "Aliases": ["www-${NOM_MILLEGRILLE}", "www-${NOM_MILLEGRILLE}.local"]
        }
    ]
  },
 "EndpointSpec": {
    "Mode": "vip",
    "Ports": [
      {
        "Protocol": "tcp",
        "PublishedPort": 443,
        "TargetPort": 443,
        "PublishMode": "host"
      }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
