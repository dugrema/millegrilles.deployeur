{
  "Name": "publicateur-python",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "${mg-python}",
      "Args": [
        "demarrer_publicateur.py",
        "--info",
        "--webroot",
        "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx"
      ],
      "Hostname": "publicateur-python.local",
      "Env": [
        "MG_NOM_MILLEGRILLE=${NOM_MILLEGRILLE}",
        "MG_MQ_HOST=mq",
        "MG_MQ_PORT=5673",
        "MG_MQ_SSL=on",
        "MG_MQ_AUTH_CERT=on",
        "MG_MQ_CERTFILE=/run/secrets/pki.millegrilles.ssl.fullchain",
        "MG_MQ_KEYFILE=/run/secrets/pki.millegrilles.ssl.key",
        "MG_MQ_CA_CERTS=/run/secrets/pki.millegrilles.ssl.CAchain"
      ],
      "Mounts": [
        {
          "Type": "bind",
          "Source": "/var/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx",
          "Target": "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.publicateur.key",
          "File": {
            "Name": "pki.millegrilles.ssl.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ],
      "Configs": [
        {
          "ConfigName": "pki.publicateur.fullchain",
          "File": {
            "Name": "/run/secrets/pki.millegrilles.ssl.fullchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "ConfigName": "pki.millegrille.fullchain",
          "File": {
            "Name": "/run/secrets/pki.millegrilles.ssl.CAchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.millegrilles.nginx == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 200000000,
        "MemoryBytes": 41943040
      }
    },
    "RestartPolicy": {
      "Condition": "none"
    },
    "Mode": {
      "Global": {}
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net"
        }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
