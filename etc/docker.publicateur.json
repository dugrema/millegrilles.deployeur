{
  "Name": "publicateur-python",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "${mg-python}",
      "Args": [
        "demarrer_publicateur.py",
        "--info",
        "--webroot",
        "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx/public"
      ],
      "Hostname": "publicateur-python-public.local",
      "Env": [
        "MG_NOM_MILLEGRILLE=${NOM_MILLEGRILLE}",
        "MG_MQ_HOST=mq",
        "MG_MQ_PORT=5673",
        "MG_MQ_SSL=on",
        "MG_MQ_AUTH_CERT=on",
        "MG_MQ_CERTFILE=/run/secrets/pki.millegrilles.ssl.fullchain",
        "MG_MQ_KEYFILE=/run/secrets/pki.millegrilles.ssl.key",
        "MG_MQ_CA_CERTS=/run/secrets/pki.millegrilles.ssl.CAchain"
      ],
      "Mounts": [
        {
          "Type": "bind",
          "Source": "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx/public",
          "Target": "/opt/millegrilles/${NOM_MILLEGRILLE}/mounts/nginx/public"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.publicateur.fullchain",
          "File": {
            "Name": "pki.millegrilles.ssl.fullchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "SecretName": "pki.publicateur.key",
          "File": {
            "Name": "pki.millegrilles.ssl.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "SecretName": "pki.ca.millegrille.fullchain",
          "File": {
            "Name": "pki.millegrilles.ssl.CAchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.millegrilles.nginx == true",
        "node.labels.netzone.public == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 200000000,
        "MemoryBytes": 41943040
      }
    },
    "RestartPolicy": {
      "Condition": "any",
      "Delay": 30000000000,
      "MaxAttempts": 10
    },
    "Mode": {
      "Global": {}
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net"
        }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
