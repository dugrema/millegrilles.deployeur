{
  "Name": "transactions-python",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "${mg-python}",
      "Args": [
        "demarrer_transaction.py"
      ],
      "Hostname": "transactions-python.local",
      "Env": [
        "MG_NOM_MILLEGRILLE=${NOM_MILLEGRILLE}",
        "MG_CONFIG_JSON=/run/secrets/mg.transaction.json",
        "MG_MONGO_USERNAME=transaction",
        "MG_MQ_HOST=mq",
        "MG_MQ_PORT=5673",
        "MG_MQ_SSL=on",
        "MG_MQ_AUTH_CERT=on",
        "MG_MQ_CERTFILE=/run/secrets/pki.millegrilles.ssl.cert",
        "MG_MQ_KEYFILE=/run/secrets/pki.millegrilles.ssl.key",
        "MG_MQ_CA_CERTS=/run/secrets/pki.millegrilles.ssl.CAchain",
        "MG_MONGO_HOST=mongo",
        "MG_MONGO_SSL=on",
        "MG_MONGO_SSL_CERTFILE=/run/secrets/pki.millegrilles.ssl.key_cert",
        "MG_MONGO_SSL_CA_CERTS=/run/secrets/pki.millegrilles.ssl.CAchain"
      ],
      "Secrets": [
        {
          "SecretName": "pki.transaction.key",
          "File": {
            "Name": "pki.millegrilles.ssl.key",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "SecretName": "pki.transaction.key_cert",
          "File": {
            "Name": "pki.millegrilles.ssl.key_cert",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }, {
          "SecretName": "passwd.python.transactions.json",
          "File": {
            "Name": "mg.transaction.json",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ],
      "Configs": [
        {
          "ConfigName": "pki.transaction.cert",
          "File": {
            "Name": "/run/secrets/pki.millegrilles.ssl.cert",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        },
        {
          "ConfigName": "pki.ca.millegrille.fullchain",
          "File": {
            "Name": "/run/secrets/pki.millegrilles.ssl.CAchain",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ]
    },
    "Placement": {
      "Constraints": [
        "node.labels.netzone.private == true",
        "node.labels.millegrilles.python == true",
        "node.labels.millegrilles.database == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 500000000,
        "MemoryBytes": 104857600
      }
    },
    "RestartPolicy": {
      "Condition": "any",
      "Delay": 30000000000,
      "MaxAttempts": 10
    },
    "Mode": {
      "Replicated": {
        "Replicas": 1
      }
    },
    "Networks": [
        {
          "Target": "mg_${NOM_MILLEGRILLE}_net"
        }
    ]
  },
  "Labels": {
    "millegrille": "${NOM_MILLEGRILLE}"
  }
}
