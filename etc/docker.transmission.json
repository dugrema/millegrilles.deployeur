{
  "name": "transmission",
  "env": [
    "PGID=980",
    "TZ=America/Toronto",
    "USER=millegrilles",
    "PASS=bwahahah1202"
  ],
  "mounts": [
    "${MOUNTS}/consignation/torrents/downloads:/downloads:rw",
    "${MOUNTS}/consignation/torrents:/torrents:rw"
  ],
  "constraints": [
    "node.labels.millegrilles.coupdoeil == true"
  ],
  "configs": [
    {
      "name": "pki.coupdoeil.cert",
      "filename": "/run/secrets/cert.pem"
    },
    {
      "name": "pki.web.cert;pki.coupdoeil.cert",
      "filename": "/run/secrets/webcert.pem"
    },
    {
      "name": "pki.millegrille.cert",
      "filename": "/run/secrets/millegrille.cert.pem"
    }
  ],
  "secrets": [
    {
      "name": "pki.coupdoeil.key",
      "filename": "key.pem"
    },
    {
      "name": "pki.web.key;pki.coupdoeil.key",
      "filename": "webkey.pem"
    }
  ],
  "endpoint_spec": {
    "mode": "vip",
    "ports": [
      {
        "published_port": 51413,
        "target_port": 51413,
        "protocol": "tcp",
        "publish_mode": "host"
      },
      {
        "published_port": 51413,
        "target_port": 51413,
        "protocol": "udp",
        "publish_mode": "host"
      }
    ]
  },
  "container_labels": {
    "ipv6.mapper.network": "mg_ipv6"
  },
  "networks": [{
    "target": "mg_${IDMG}_net",
    "aliases": ["transmission"]
  }],
  "labels": {
    "millegrille": "${IDMG}"
  },
  "resources": {
    "cpu_limit": 500000000,
    "mem_limit": 52428800
  },
 "restart_policy": {
    "condition": "on-failure",
    "delay": 30000000000,
    "max_attempts": 3
  },
  "mode": {
    "mode": "replicated",
    "replicas": 1
  }
}