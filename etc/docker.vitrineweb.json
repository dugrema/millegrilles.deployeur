{
  "Name": "vitrineweb",
  "TaskTemplate": {
    "ContainerSpec": {
      "Image": "${vitrineweb}",
      "Args": [
        "./run.sh"
      ],
      "Hostname": "vitrineweb",
      "Env": [
        "LISTE_MILLEGRILLES=IDMG=${IDMG}:WEB_URL=vitrineweb-${IDMGTRUNCLOWER}.local:WEB_CERT=/run/secrets/fullchain.cert.pem:WEB_KEY=/run/secrets/key.pem"
      ],
      "Mounts": [
        {
          "Type": "bind",
          "Source": "/var/opt/millegrilles",
          "Target": "/usr/share/nginx/millegrilles"
        }
      ],
      "Secrets": [
        {
          "SecretName": "pki.vitrineweb.key",
          "File": {
            "Name": "key.pem",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ],
      "Configs": [
        {
          "ConfigName": "pki.vitrineweb.fullchain",
          "File": {
            "Name": "/run/secrets/fullchain.cert.pem",
            "UID": "0",
            "GID": "0",
            "Mode": 292
          }
        }
      ],
      "Labels": {
        "ipv6.mapper.network": "mg_ipv6"
      }
    },
    "Placement": {
      "Constraints": [
        "node.labels.millegrilles.vitrine == true"
      ]
    },
    "Resources": {
      "Limits": {
        "NanoCPUs": 500000000,
        "MemoryBytes": 52428800
      }
    },
    "RestartPolicy": {
      "Condition": "on-failure",
      "Delay": 30000000000,
      "MaxAttempts": 3
    },
    "Mode": {
      "Replicated": {
        "Replicas": 1
      }
    },
    "Networks": [
        {
          "Target": "mg_${IDMG}_net",
          "Aliases": ["vitrineweb-${IDMGLOWER}"]
        }
    ]
  },
 "EndpointSpec": {
    "Mode": "vip",
    "Ports": [
      {
        "Protocol": "tcp",
        "PublishedPort": 443,
        "TargetPort": 443,
        "PublishMode": "host"
      },{
        "Protocol": "tcp",
        "PublishedPort": 80,
        "TargetPort": 80,
        "PublishMode": "host"
      }
    ]
  },
  "Labels": {
    "millegrille": "${IDMG}"
  }
}
